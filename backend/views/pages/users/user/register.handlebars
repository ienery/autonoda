

<link rel="stylesheet" href="/css/users/user/register.css">

<form class="form-signin"action="/user/register" method="post">
    <h2 class="form-signin-heading">Register form</h2>
    <label for="inputEmail" class="sr-only">Email address</label>
    <input type="email" id="inputEmail" name="email" class="form-control" placeholder="Email address" required autofocus>
    <label for="inputPassword" class="sr-only">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required>
    <label for="inputPassword" class="sr-only">Password 2</label>
    <input type="password" name="password2" id="inputPassword2" class="form-control" placeholder="Password2" required>

    <button class="btn btn-lg btn-primary btn-block" type="submit">Register</button>
  </form>
